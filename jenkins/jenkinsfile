pipeline {
    agent {
        label 'devops'
    }

    stages{
        stage('App Code Checkout'){
          steps { 
            git url: 'https://github.com/prateekkumawat/jenkins-11am-project.git', branch: 'main'
          }
        }

        stage('Build Image') {
            steps {
                sh 'docker build -t jenkinsapp:latest .'
            }
        }

        stage('container create'){
            steps{
                sh 'docker run -dit --name jenkinsapp -p 8088:80 jenkinsapp:latest'
            }
        }
    }
}